{
  "compilerOptions": {
    "allowJs": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "build",
    "removeComments": false,
    "rootDir": "src",
    "strictNullChecks": true,
    "target": "es6",
    "baseUrl": "src",
    "paths": {
      "config/*": [
        "config/*"
      ],
      "database":[
        "database/*"
      ],
      "entities/*": [
        "database/entities/*",
      ],
    }
  },
  "types": [
    "node"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ],
}